<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.example.jetnixx.secret.fragments.AccountProfileFragment">

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <android.support.design.widget.CoordinatorLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical">

                <android.support.v7.widget.CardView
                    android:id="@+id/card_text_view_account_profile"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_margin="@dimen/margin_all_8_dp"
                    app:cardCornerRadius="@dimen/card_view_corner_radius"
                    app:cardElevation="@dimen/card_elevation">

                    <LinearLayout
                        android:id="@+id/layout_account_settings_text"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="vertical"
                        android:padding="@dimen/layout_inside_card_padding">

                        <TextView
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:paddingBottom="@dimen/card_header_padding_bottom"
                            android:text="Account Settings"
                            android:textSize="@dimen/card_header_font_size" />

                        <TextView
                            android:id="@+id/lable_email_address"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:text="Email Address"
                            android:textSize="@dimen/card_label_font_size"
                            android:textStyle="bold" />

                        <TextView
                            android:id="@+id/email_address"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:paddingBottom="@dimen/card_text_separator_padding_bottom"
                            android:text="summmmit44@gmail.com"
                            android:textSize="@dimen/card_text_font_size" />

                        <TextView
                            android:id="@+id/label_password"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:text="Password"
                            android:textSize="@dimen/card_label_font_size"
                            android:textStyle="bold" />

                        <TextView
                            android:id="@+id/password"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:paddingBottom="@dimen/card_text_separator_padding_bottom"
                            android:text="******"
                            android:textSize="@dimen/card_text_font_size" />

                    </LinearLayout>

                </android.support.v7.widget.CardView>

            </LinearLayout>

        </android.support.design.widget.CoordinatorLayout>

    </ScrollView>

</FrameLayout>
